{
  "name": "spicycough",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "astro:upgrade": "pnpm dlx @astrojs/upgrade",
    "build": "astro telemetry disable && astro check && astro build",
    "check": "astro check",
    "dev": "astro dev",
    "etest": "playwright test",
    "format:biome": "biome check . --apply",
    "lint": "astro sync && run-s --continue-on-error lint:*",
    "lint:biome": "biome lint .",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:types": "tsc -b",
    "lint:astro": "astro check",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "preview": "preview:cf",
    "preview:astro": "astro preview",
    "preview:cf": "wrangler pages dev ./dist",
    "start": "astro dev",
    "test": "vitest",
    "types": "types:check",
    "types:build": "tsc --noEmit --pretty",
    "types:check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,astro}": [
      "biome check . --apply",
      "biome lint ."
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "dependencies": {
    "@astrojs/check": "^0.5.7",
    "@astrojs/cloudflare": "^9.1.0",
    "@astrojs/ts-plugin": "^1.5.3",
    "@astropub/icons": "^0.2.0",
    "@t3-oss/env-core": "^0.9.2",
    "astro": "^4.5.1",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "ts-pattern": "^5.0.8"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.0.3",
    "@biomejs/biome": "^1.6.0",
    "@cloudflare/workers-types": "^4.20240222.0",
    "@playwright/test": "^1.42.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.26",
    "astro-robots-txt": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "summaries": "*",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.3.1",
    "wrangler": "^3.32.0"
  }
}
