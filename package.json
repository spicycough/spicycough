{
  "name": "spicycough",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "astro:upgrade": "pnpm dlx @astrojs/upgrade",
    "build": "astro telemetry disable && astro check && astro build",
    "check": "astro check",
    "dev": "astro dev",
    "etest": "playwright test",
    "format:biome": "biome check . --apply",
    "lint": "astro sync && run-s --continue-on-error lint:*",
    "lint:biome": "biome lint .",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:types": "tsc -b",
    "lint:astro": "astro check",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "preview": "preview:cf",
    "preview:astro": "astro preview",
    "preview:cf": "wrangler pages dev ./dist",
    "start": "astro dev",
    "test": "vitest",
    "types": "types:check",
    "types:build": "tsc --noEmit --pretty",
    "types:check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,astro}": [
      "biome check . --apply",
      "biome lint ."
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.5.6",
    "@astrojs/cloudflare": "^8.0.0",
    "@astrojs/tailwind": "^5.0.3",
    "@astrojs/ts-plugin": "^1.3.1",
    "@astropub/icons": "^0.2.0",
    "ts-pattern": "^5.0.6"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^5.0.3",
    "@biomejs/biome": "^1.4.1",
    "@cloudflare/workers-types": "^4.20231121.0",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.4",
    "astro": "^4.0.4",
    "astro-robots-txt": "^1.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss": "^3.3.6",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "wrangler": "^3.20.0"
  }
}
